#:import dp kivy.metrics.dp
#:import sp kivy.metrics.sp

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)

        canvas.before:
            Color:
                rgba: 0.125, 0.698, 0.667, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Vocab'
            font_size: sp(50)
            size_hint_y: 0.2
            color: 0.2, 0.4, 0.4, 1
            font_name: 'fonts/Roboto/static/Roboto-Bold.ttf'

        # Use custom button style
        CustomRoundedButton:
            text: 'Add Word'
            on_press: root.add_word()
        CustomRoundedButton:
            text: 'Word List'
            on_press: root.word_list()
        CustomRoundedButton:
            text: 'Practice'
            on_press: root.practice()
        CustomRoundedButton:
            text: 'Quiz'
            on_press: root.quiz()

<CustomRoundedButton@Button>:
    size_hint_y: None
    height: dp(60)
    background_normal: ''
    background_color: 0, 0, 0, 0  # Transparent background
    color: 0.2, 0.4, 0.4, 1
    font_size: sp(18)
    font_name: 'fonts/Roboto/static/Roboto-Bold.ttf'

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]
